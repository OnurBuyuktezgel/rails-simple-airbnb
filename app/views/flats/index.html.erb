<div class="container p-5">
  <div class="row">
    <h1>All flats</h1>
  </div>
  <div class="row">
    <p>There are <%= @flats.count %> flats available.</p>
  </div>
  <div class="row">
    <% @flats.each do |flat| %>
    <div class="card-group col-4 p-3">
      <div class="card">
        <div class="card-body text-center">
          <h5 class="card-title"><%= link_to flat.name%></h5>
          <p class="card-text"><%= flat.address %></p>
          <p class="card-text"><%= flat.price_per_night %></p>
          <p class="card-text"><%= flat.number_of_guests %></p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

